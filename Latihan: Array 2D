#include <iostream>
using namespace std;

int main() {
    int R, C;
    cout << "Masukkan jumlah baris (R): ";
    cin >> R;
    cout << "Masukkan jumlah kolom (C): ";
    cin >> C;

    int m[10][10]; // deklarasi matriks maksimal 10x10

    cout << "\nMasukkan elemen-elemen matriks (" << R << " baris x " << C << " kolom):\n";
    for (int r = 0; r < R; r++) {
        cout << "Baris ke-" << r + 1 << ": ";
        for (int c = 0; c < C; c++) {
            cin >> m[r][c];
        }
    }

    cout << "\nmatriks yang di input\n";
    for (int r = 0; r < R; r++) {
        for (int c = 0; c < C; c++) {
            cout << m[r][c] << "\t";
        }
        cout << endl;
    }

    cout << "\nhasilnya\n";
    for (int r = 0; r < R; r++) {
        int s = 0;
        for (int c = 0; c < C; c++) {
            s += m[r][c];
        }
        cout << "Jumlah baris ke-" << r + 1 << " = " << s << endl;
    }

    return 0;
}
